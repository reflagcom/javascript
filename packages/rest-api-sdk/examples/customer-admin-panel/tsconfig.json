{
  "extends": "@reflag/tsconfig/library",
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ESNext",
    "jsx": "preserve",
    "noEmit": true,
    "moduleResolution": "Bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
